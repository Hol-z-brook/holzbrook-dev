---
import { H3, P } from '../../../../lib/ui';

interface Props {
  name: string;
  icon: string;
  description: string;
  class?: string;
}

const { name, icon, description, class: className } = Astro.props;
---

<div class:list={['bg-white rounded-lg shadow-md p-6 space-y-4', className]}>
  <div class="flex items-center space-x-4">
    <div class="text-2xl">
      {icon}
    </div>
    <H3 class="text-lg font-semibold text-gray-900">
      {name}
    </H3>
  </div>

  <P class="text-gray-700">
    {description}
  </P>
</div>
