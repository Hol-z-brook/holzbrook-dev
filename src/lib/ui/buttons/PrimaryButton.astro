---
import Button from './Button.astro';

interface Props {
  radius?: string;
  class?: string;
  'data-testid'?: string;
}

const { radius, class: className, 'data-testid': dataTestId } = Astro.props;
---

<Button variant="primary" radius={radius} class={className} data-testid={dataTestId}>
  <slot />
</Button>
