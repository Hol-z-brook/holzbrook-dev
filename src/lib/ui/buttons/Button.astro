---
interface Props {
  variant?: 'primary' | 'outlined';
  radius?: string;
  class?: string;
  'data-testid'?: string;
}

const {
  variant = 'primary',
  radius = '4px',
  class: className = '',
  'data-testid': dataTestId,
} = Astro.props;

const baseStyles =
  'h-8 flex items-center justify-center px-4 text-sm font-medium shadow-sm transition-all duration-200';

const variantStyles = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 hover:shadow-md active:bg-blue-800',
  outlined:
    'bg-white border border-gray-300 text-gray-700 hover:border-gray-400 hover:bg-gray-50 active:bg-gray-100',
};
---

<button
  class={`${baseStyles} ${variantStyles[variant]} ${className}`}
  style={`border-radius: ${radius}`}
  data-testid={dataTestId}
>
  <slot />
</button>
