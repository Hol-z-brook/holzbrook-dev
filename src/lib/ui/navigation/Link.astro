---
interface Props {
  href: string;
  class?: string;
  'data-testid'?: string;
}

const { href, class: className, 'data-testid': dataTestId }: Props = Astro.props;
---

<a
  href={href}
  class={`text-gray-700 hover:text-gray-900 transition-colors duration-200 ${className}`}
  data-testid={dataTestId}
>
  <slot />
</a>
