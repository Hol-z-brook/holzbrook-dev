---
interface Props {
  class?: string;
  href?: string;
  target?: string;
}

const { class: className = '', href, target } = Astro.props;
---

{
  !href ? (
    <slot />
  ) : (
    <a
      href={href}
      target={target}
      class={`text-primary-600 hover:text-primary-700 transition-colors ${className}`}
      data-astro-prefetch
    >
      <slot />
    </a>
  )
}
