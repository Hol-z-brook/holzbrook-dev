---
interface Props {
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  'data-testid'?: string;
}

const { as: Tag = 'div', class: className, 'data-testid': dataTestId }: Props = Astro.props;
---

<Tag class={`flex items-center justify-center ${className}`} data-testid={dataTestId}>
  <slot />
</Tag>
