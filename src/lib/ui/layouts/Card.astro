---
interface Props {
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  'data-testid'?: string;
}

const { as: Tag = 'div', class: className, 'data-testid': dataTestId }: Props = Astro.props;
---

<Tag class={`p-4 bg-white rounded-xl shadow-lg ${className}`} data-testid={dataTestId}>
  <slot />
</Tag>
