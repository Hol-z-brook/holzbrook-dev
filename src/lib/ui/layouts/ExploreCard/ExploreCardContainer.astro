---
interface Props {
  class?: string;
  bgColor?: string;
  'data-testid'?: string;
}

const { class: className, bgColor = 'bg-white', 'data-testid': dataTestId }: Props = Astro.props;
---

<div class={`p-6 rounded-lg shadow-sm ${bgColor} ${className}`} data-testid={dataTestId}>
  <slot />
</div>
