---
import { App } from '../../../app';

interface Props {
  href: string;
  class?: string;
  'data-testid'?: string;
}

const { href, class: className, 'data-testid': dataTestId }: Props = Astro.props;
---

<App.Link
  href={href}
  class={`px-6 py-3 text-white rounded-lg shadow-lg transition-colors duration-300 ${className ?? ''}`}
  data-testid={dataTestId}
>
  <slot />
</App.Link>
