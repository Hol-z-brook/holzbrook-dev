---
type SpacingValue = '2' | '4';

interface Props {
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  spacing?: SpacingValue;
  'data-testid'?: string;
}

const { as: Tag = 'div', class: className = '', 'data-testid': dataTestId }: Props = Astro.props;
---

<Tag class={`flex flex-col ${className}`} data-testid={dataTestId}>
  <slot />
</Tag>
