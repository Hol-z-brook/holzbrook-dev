---
type SpacingValue = '2' | '4';

interface Props {
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  spacing?: SpacingValue;
  'data-testid'?: string;
}

const {
  as: Tag = 'div',
  spacing = '4',
  class: className = '',
  'data-testid': dataTestId,
}: Props = Astro.props;
---

<Tag class={`flex flex-row gap-${spacing} ${className}`} data-testid={dataTestId}>
  <slot />
</Tag>
