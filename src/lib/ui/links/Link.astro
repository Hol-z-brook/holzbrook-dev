---
interface Props {
  href: string;
  class?: string;
  target?: string;
  rel?: string;
  'data-testid'?: string;
}

const { href, class: className = '', target, rel, 'data-testid': dataTestId } = Astro.props;
---

<a
  href={href}
  class={`text-primary-600 hover:text-primary-700 transition-colors ${className}`}
  target={target}
  rel={rel}
  data-testid={dataTestId}
>
  <slot />
</a>
