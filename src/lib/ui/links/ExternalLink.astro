---
interface Props {
  href: string;
  class?: string;
  'data-testid'?: string;
}

const { href, class: className = '', 'data-testid': dataTestId } = Astro.props;

// Ensure the URL is external
if (!href.startsWith('http://') && !href.startsWith('https://')) {
  throw new Error('ExternalLink requires an external URL starting with http:// or https://');
}
---

<a
  href={href}
  class={`text-primary-600 hover:text-primary-700 transition-colors ${className}`}
  target="_blank"
  rel="noopener noreferrer"
  data-testid={dataTestId}
>
  <slot />
</a>
