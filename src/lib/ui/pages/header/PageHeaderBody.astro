---
import P from '../../typography/P.astro';

interface Props {
  class?: string;
  'data-testid'?: string;
}

const { class: className, 'data-testid': dataTestId } = Astro.props;
---

<P class={`text-lg max-w-2xl mx-auto leading-relaxed ${className || ''}`} data-testid={dataTestId}>
  <slot />
</P>
