---
interface Props {
  class?: string;
  title: string;
  subtitle?: string;
}

const { class: className, title, subtitle }: Props = Astro.props;
---

<section
  class={`
    relative
    py-24
    text-center
    overflow-hidden
    ${className}
  `}
>
  <div
    class={`
      absolute
      inset-0
      bg-gradient-to-br
      from-orange-300
      via-white
      to-orange-200
      animate-gradient
    `}
  >
  </div>
  <div class="relative max-w-4xl mx-auto px-6">
    <h1 class="text-6xl lg:text-7xl font-extrabold text-gray-800 leading-tight mb-6">
      {title}
    </h1>
    {subtitle && <p class="text-xl lg:text-2xl text-gray-700 mb-10">{subtitle}</p>}
  </div>
</section>
