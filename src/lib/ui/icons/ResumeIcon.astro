---
import type { IconProps } from './IconProps';

/**
 * Resume icon component that can be used to indicate resume downloads or viewing.
 * Supports both filled and outlined styles, custom sizing, and colors.
 */
interface Props extends IconProps {}

const {
  class: className = '',
  size = 5,
  color = 'currentColor',
  filled = true,
}: Props = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={`h-${size} w-${size} ${className}`}
  viewBox="0 0 20 20"
  fill={filled ? color : 'none'}
  stroke={!filled ? color : undefined}
>
  <path
    fill-rule="evenodd"
    d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z"
    clip-rule="evenodd"></path>
</svg>
