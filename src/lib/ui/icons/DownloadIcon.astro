---
import { Icon } from 'astro-icon/components';

/**
 * Download icon component that can be used to indicate download actions.
 * Supports both filled and outlined styles, custom sizing, and colors.
 */
interface Props {
  class?: string;
  size?: number;
  color?: string;
}

const { class: className, size, color } = Astro.props;
---

<Icon name="local:download" class={className} size={size} color={color} />
