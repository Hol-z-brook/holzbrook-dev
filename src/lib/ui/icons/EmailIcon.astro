---
import { Icon } from 'astro-icon/components';

/**
 * Email icon component that can be used to indicate email addresses or email-related actions.
 * Supports both filled and outlined styles, custom sizing, and colors.
 */
interface Props {
  class?: string;
  size?: number;
  color?: string;
}

const { class: className, size, color } = Astro.props;
---

<Icon name="local:email" class={className} size={size} color={color} />
