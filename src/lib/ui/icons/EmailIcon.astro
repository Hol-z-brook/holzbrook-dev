---
import type { IconProps } from './IconProps';

/**
 * Email icon component that can be used to indicate email addresses or email-related actions.
 * Supports both filled and outlined styles, custom sizing, and colors.
 */
interface Props extends IconProps {}

const {
  class: className = '',
  size = 5,
  color = 'currentColor',
  filled = true,
}: Props = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={`h-${size} w-${size} ${className}`}
  viewBox="0 0 20 20"
  fill={filled ? color : 'none'}
  stroke={!filled ? color : undefined}
>
