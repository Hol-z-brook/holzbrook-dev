---
import * as ThemePage from './_ThemePage/_index.astro';
import * as ThemeSection from './_ThemeSection/_index.astro';
import App from '../../lib/app';
import { H4, Li, Ul } from '../../lib/ui';
import theme from '../../theme';

const sections = [
  { id: 'font-sizes', label: 'Font Sizes' },
  { id: 'font-weights', label: 'Font Weights' },
  { id: 'usage-examples', label: 'Usage Examples' },
];

const sampleText = 'Design with purpose';
const shortSampleText = 'Sample';

type FontSizeKey = keyof typeof theme.fontSizes;
const fontSizeUsage: Record<FontSizeKey, string> = {
  xs: 'Helper text, captions, and fine print',
  sm: 'Secondary text, form labels, and UI elements',
  base: 'Default body text and general content',
  lg: 'Subheadings and emphasized content',
  xl: 'Section headings and card titles',
  '2xl': 'Major section headers and article titles',
  '3xl': 'Page titles and hero headlines',
  '4xl': 'Large display text and hero headers',
  '5xl': 'Extra large display text and major headlines',
  '6xl': 'Massive display text for hero sections',
  '7xl': 'Giant display text for special features',
  '8xl': 'Enormous display text for impact',
  '9xl': 'Maximum size for dramatic effect',
  headingLg: 'Large heading for major sections',
  headingMd: 'Medium heading for content sections',
  headingSm: 'Small heading for subsections',
  body: 'Standard body text size',
  subtext: 'Small text for supplementary content',
};
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <div class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePage.Header>
          <ThemePage.BackLink />
          <ThemePage.Title>Typography</ThemePage.Title>
          <ThemePage.Description>
            Our typography system provides consistent text styles and scales to ensure readability
            and hierarchy across all interfaces.
          </ThemePage.Description>
        </ThemePage.Header>

        <ThemePage.Nav>
          <ThemePage.NavTitle slot="title">Typography</ThemePage.NavTitle>
          {sections.map(({ id, label }) => <ThemePage.NavItem href={`#${id}`} label={label} />)}
        </ThemePage.Nav>

        <div class="space-y-24">
          <ThemeSection.Section id="font-sizes">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">Font Sizes</ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                A comprehensive scale of font sizes designed to create clear visual hierarchy and
                maintain readability across different screen sizes.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body class="space-y-8">
              {
                Object.entries(theme.fontSizes).map(([name, size]) => (
                  <div class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-primary-200 hover:shadow-sm transition-all">
                    <div class="flex flex-col lg:grid lg:grid-cols-[8rem_1fr] gap-6">
                      <div class="space-y-1">
                        <div class="text-base font-medium text-gray-900">{name}</div>
                        <div class="text-sm font-mono text-gray-500">{size}</div>
                      </div>
                      <div class="space-y-4">
                        <div class="min-h-[4rem] flex items-center">
                          <div
                            style={`font-size: ${size}`}
                            class="text-gray-900 group-hover:text-primary-900 transition-colors"
                          >
                            {shortSampleText}
                          </div>
                        </div>
                        <div class="text-sm text-gray-600 border-t border-gray-100 pt-4">
                          {fontSizeUsage[name as FontSizeKey]}
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </ThemeSection.Body>
          </ThemeSection.Section>

          <ThemeSection.Section id="font-weights">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">Font Weights</ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Different font weights help establish hierarchy and emphasis in your typography.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body class="space-y-8">
              {
                Object.entries(theme.fontWeights).map(([name, weight]) => (
                  <div class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-primary-200 hover:shadow-sm transition-all">
                    <div class="flex flex-col lg:grid lg:grid-cols-[8rem_1fr] gap-6">
                      <div class="space-y-1">
                        <div class="text-base font-medium text-gray-900">{name}</div>
                        <div class="text-sm font-mono text-gray-500">{weight}</div>
                      </div>
                      <div class="space-y-4">
                        <div class="min-h-[4rem] flex items-center">
                          <div
                            style={`font-weight: ${weight}`}
                            class="text-xl text-gray-900 group-hover:text-primary-900 transition-colors"
                          >
                            {sampleText}
                          </div>
                        </div>
                        <div class="text-sm text-gray-600 border-t border-gray-100 pt-4">
                          {name === 'thin'
                            ? 'Extremely light weight, best for decorative use or very large sizes'
                            : name === 'extralight'
                              ? 'Very light weight, suitable for specialized display text'
                              : name === 'light'
                                ? 'Light weight, good for large text or subtle emphasis'
                                : name === 'normal'
                                  ? 'Regular weight, ideal for body text and general content'
                                  : name === 'medium'
                                    ? 'Medium weight, perfect for subheadings and mild emphasis'
                                    : name === 'semibold'
                                      ? 'Semi-bold weight, great for section headers and strong emphasis'
                                      : name === 'bold'
                                        ? 'Bold weight, ideal for headlines and primary headings'
                                        : name === 'extrabold'
                                          ? 'Extra bold weight, for high-impact headlines and callouts'
                                          : 'Black weight, maximum emphasis for dramatic display text'}
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </ThemeSection.Body>
          </ThemeSection.Section>

          <ThemeSection.Section id="usage-examples">
            <ThemeSection.Header>
              <ThemeSection.HeaderTitle slot="title">Usage Examples</ThemeSection.HeaderTitle>
              <ThemeSection.HeaderBody slot="body">
                Common typography patterns and combinations for different content types.
              </ThemeSection.HeaderBody>
            </ThemeSection.Header>
            <ThemeSection.Body>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Content Typography -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">Content Typography</H4>
                  <div class="space-y-8">
                    <!-- Article Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Article Layout</div>
                      <div class="space-y-4">
                        <div
                          style={`font-size: ${theme.fontSizes['3xl']}; font-weight: ${theme.fontWeights.bold}`}
                          class="text-gray-900"
                        >
                          Article Title
                        </div>
                        <div
                          style={`font-size: ${theme.fontSizes.lg}; font-weight: ${theme.fontWeights.medium}`}
                          class="text-gray-600"
                        >
                          Article subtitle or description that spans multiple lines to show how the
                          text wraps.
                        </div>
                        <div style={`font-size: ${theme.fontSizes.base}`} class="text-gray-700">
                          Body text with a comfortable reading size. {sampleText} This shows how regular
                          content appears in an article layout.
                        </div>
                      </div>
                    </div>

                    <!-- List Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">List Typography</div>
                      <div class="space-y-4">
                        <div
                          style={`font-size: ${theme.fontSizes.xl}; font-weight: ${theme.fontWeights.medium}`}
                          class="text-gray-900"
                        >
                          Feature List
                        </div>
                        <Ul class="space-y-3">
                          {
                            [1, 2, 3].map(() => (
                              <Li class="flex gap-3">
                                <div
                                  style={`font-size: ${theme.fontSizes.sm}`}
                                  class="text-primary-600"
                                >
                                  •
                                </div>
                                <div
                                  style={`font-size: ${theme.fontSizes.sm}`}
                                  class="text-gray-600"
                                >
                                  List item with smaller text size for better scannability
                                </div>
                              </Li>
                            ))
                          }
                        </Ul>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- UI Typography -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">UI Typography</H4>
                  <div class="space-y-8">
                    <!-- Card Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Card Typography</div>
                      <div class="p-4 bg-gray-50 rounded">
                        <div class="space-y-3">
                          <div
                            style={`font-size: ${theme.fontSizes.lg}; font-weight: ${theme.fontWeights.medium}`}
                            class="text-gray-900"
                          >
                            Card Title
                          </div>
                          <div style={`font-size: ${theme.fontSizes.sm}`} class="text-gray-600">
                            Card description with smaller text that provides additional context
                            about the card content.
                          </div>
                          <div
                            style={`font-size: ${theme.fontSizes.sm}; font-weight: ${theme.fontWeights.medium}`}
                            class="text-primary-600"
                          >
                            Learn more →
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Form Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Form Typography</div>
                      <div class="space-y-4">
                        <div class="space-y-2">
                          <div
                            style={`font-size: ${theme.fontSizes.sm}; font-weight: ${theme.fontWeights.medium}`}
                            class="text-gray-700"
                          >
                            Input Label
                          </div>
                          <div
                            class="p-2 border border-gray-200 rounded"
                            style={`font-size: ${theme.fontSizes.base}`}
                          >
                            Input text
                          </div>
                          <div style={`font-size: ${theme.fontSizes.xs}`} class="text-gray-500">
                            Helper text with additional information
                          </div>
                        </div>
                        <div
                          class="px-4 py-2 bg-primary-600 text-white rounded text-center"
                          style={`font-size: ${theme.fontSizes.sm}; font-weight: ${theme.fontWeights.medium}`}
                        >
                          Submit Button
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </ThemeSection.Body>
          </ThemeSection.Section>
        </div>
      </div>
    </App.PageSection>
  </App.PageBody>
</App.Page>
