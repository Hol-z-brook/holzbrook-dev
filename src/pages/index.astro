---
import { ExploreCard, PageHero } from '../lib/ui';
import App from '../lib/app';
import BusinessCardAvatar from './_/BusinessCardAvatar.astro';
import BusinessCardContainer from './_/BusinessCardContainer.astro';
import BusinessCardFullName from './_/BusinessCardFullName.astro';
import BusinessCardJobTitle from './_/BusinessCardJobTitle.astro';
import BusinessCardLink from './_/BusinessCardLink.astro';
import EmailIcon from './_/EmailIcon.astro';
import GitHubIcon from './_/GitHubIcon.astro';
import LinkedInIcon from './_/LinkedInIcon.astro';
import ResumeIcon from './_/ResumeIcon.astro';
import { makeHomeSherpa } from './_/home.sherpa';
import { homePageData } from './_/home.data';
import { workPageData } from './work/_/work.data';

const sherpa = makeHomeSherpa();
---

<App.Page>
  <App.PageBody backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero title={homePageData.title} subtitle={homePageData.subtitle} />

    <div class="flex justify-center -mt-8">
      <BusinessCardContainer>
        <div class="flex items-center justify-between mb-4">
          <BusinessCardFullName>{workPageData.candidate.name}</BusinessCardFullName>
          <BusinessCardAvatar />
        </div>

        <BusinessCardJobTitle>{workPageData.candidate.title}</BusinessCardJobTitle>

        <div class="space-y-3">
          <BusinessCardLink href={`mailto:${workPageData.candidate.email}`}>
            <EmailIcon />
            {workPageData.candidate.email}
          </BusinessCardLink>

          <BusinessCardLink href={sherpa.work.resume({})}>
            <ResumeIcon />
            View Resume
          </BusinessCardLink>

          {
            workPageData.candidate.linkedIn && (
              <BusinessCardLink href={workPageData.candidate.linkedIn}>
                <LinkedInIcon />
                LinkedIn
              </BusinessCardLink>
            )
          }

          {
            workPageData.candidate.github && (
              <BusinessCardLink href={workPageData.candidate.github}>
                <GitHubIcon />
                GitHub
              </BusinessCardLink>
            )
          }
        </div>
      </BusinessCardContainer>
    </div>

    <section class="py-12">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <ExploreCard.Container bgColor={homePageData.sections.work.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.work.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.work.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.work.link}
              class={homePageData.sections.work.ctaClass}
            >
              {homePageData.sections.work.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>

          <ExploreCard.Container bgColor={homePageData.sections.family.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.family.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.family.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.family.link}
              class={homePageData.sections.family.ctaClass}
            >
              {homePageData.sections.family.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>

          <ExploreCard.Container bgColor={homePageData.sections.play.bgColor}>
            <ExploreCard.Title>
              {homePageData.sections.play.title}
            </ExploreCard.Title>
            <ExploreCard.Blurb>
              {homePageData.sections.play.description}
            </ExploreCard.Blurb>
            <ExploreCard.Cta
              href={homePageData.sections.play.link}
              class={homePageData.sections.play.ctaClass}
            >
              {homePageData.sections.play.cta}
            </ExploreCard.Cta>
          </ExploreCard.Container>
        </div>
      </div>
    </section>

    <App.PageFooter />
  </App.PageBody>
</App.Page>
