---
import App from '../../../../lib/app';
import { H4 } from '../../../../lib/ui';
import theme from '../../../../theme';
import ThemePage from '../_/ThemePage';
import ThemePageNav from '../_/ThemePageNav';
import ThemePageSection from '../_/ThemePageSection';

export const path = 'spacing';

const sections = [
  { id: 'spacing-scale', label: 'Spacing Scale' },
  { id: 'usage-examples', label: 'Usage Examples' },
];
---

<App.Page>
  <App.PageHeader />
  <App.PageBody class="bg-gray-50">
    <App.PageSection>
      <div class="max-w-[90rem] mx-auto py-16 px-6">
        <ThemePage.Header>
          <ThemePage.BackLink />
          <ThemePage.Title>Spacing</ThemePage.Title>
          <ThemePage.Description>
            A consistent spacing system helps create harmonious layouts and maintain visual rhythm
            throughout the interface.
          </ThemePage.Description>
        </ThemePage.Header>

        <ThemePageNav.Container>
          <ThemePageNav.Title slot="title">Spacing</ThemePageNav.Title>
          {sections.map(({ id, label }) => <ThemePageNav.Item href={`#${id}`} label={label} />)}
        </ThemePageNav.Container>

        <div class="space-y-24">
          <!-- Spacing Scale -->
          <ThemePageSection.Container id="spacing-scale">
            <ThemePageSection.Header>
              <ThemePageSection.HeaderTitle slot="title">
                Spacing Scale
              </ThemePageSection.HeaderTitle>
              <ThemePageSection.HeaderBody slot="body">
                Our spacing scale provides consistent increments for margins, padding, and layout
                composition.
              </ThemePageSection.HeaderBody>
            </ThemePageSection.Header>
            <ThemePageSection.Body class="space-y-8">
              {
                Object.entries(theme.spacing).map(([name, space]) => (
                  <div class="group flex items-center gap-12 p-4 rounded-lg hover:bg-white hover:shadow-sm transition-all cursor-pointer">
                    <div class="w-32">
                      <div class="text-base font-medium text-gray-900">{name}</div>
                      <div class="text-sm text-gray-500 font-mono mt-1">{space}</div>
                    </div>
                    <div class="flex-1 flex items-center gap-4">
                      <div
                        class="bg-gradient-to-r from-primary-100 to-primary-200 rounded h-12 transition-all group-hover:from-primary-200 group-hover:to-primary-300"
                        style={`width: ${space}`}
                      />
                      <div class="text-sm text-gray-500 group-hover:text-primary-600 transition-colors">
                        {space}
                      </div>
                    </div>
                  </div>
                ))
              }
            </ThemePageSection.Body>
          </ThemePageSection.Container>

          <!-- Usage Examples -->
          <ThemePageSection.Container id="usage-examples">
            <ThemePageSection.Header>
              <ThemePageSection.HeaderTitle slot="title">
                Usage Examples
              </ThemePageSection.HeaderTitle>
              <ThemePageSection.HeaderBody slot="body">
                Common patterns and examples of how to apply spacing in your layouts.
              </ThemePageSection.HeaderBody>
            </ThemePageSection.Header>
            <ThemePageSection.Body>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Component Spacing -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">Component Spacing</H4>
                  <div class="space-y-8">
                    <!-- Button Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Button Padding</div>
                      <div class="flex gap-4">
                        <button class="px-2 py-1 bg-primary-500 text-white rounded text-sm">
                          spacing-2
                        </button>
                        <button class="px-4 py-2 bg-primary-500 text-white rounded">
                          spacing-4
                        </button>
                        <button class="px-6 py-3 bg-primary-500 text-white rounded text-lg">
                          spacing-6
                        </button>
                      </div>
                    </div>

                    <!-- Stack Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Vertical Stack</div>
                      <div class="space-y-4 bg-gray-50 p-4 rounded">
                        <div class="p-4 bg-primary-100 rounded">Item 1</div>
                        <div class="p-4 bg-primary-100 rounded">Item 2</div>
                        <div class="p-4 bg-primary-100 rounded">Item 3</div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Layout Spacing -->
                <div class="space-y-8">
                  <H4 class="text-2xl font-medium">Layout Spacing</H4>
                  <div class="space-y-8">
                    <!-- Grid Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Grid Gap</div>
                      <div class="grid grid-cols-2 gap-4 bg-gray-50 p-4 rounded">
                        <div class="p-4 bg-primary-100 rounded text-center">1</div>
                        <div class="p-4 bg-primary-100 rounded text-center">2</div>
                        <div class="p-4 bg-primary-100 rounded text-center">3</div>
                        <div class="p-4 bg-primary-100 rounded text-center">4</div>
                      </div>
                    </div>

                    <!-- Section Example -->
                    <div class="p-6 bg-white rounded-lg border border-gray-200">
                      <div class="font-medium text-lg mb-4">Section Spacing</div>
                      <div class="space-y-8 bg-gray-50 p-4 rounded">
                        <div class="space-y-2">
                          <div class="font-medium">Header</div>
                          <div class="h-8 bg-primary-100 rounded w-3/4"></div>
                        </div>
                        <div class="space-y-2">
                          <div class="font-medium">Content</div>
                          <div class="h-24 bg-primary-100 rounded"></div>
                        </div>
                        <div class="space-y-2">
                          <div class="font-medium">Footer</div>
                          <div class="h-12 bg-primary-100 rounded"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </ThemePageSection.Body>
          </ThemePageSection.Container>
        </div>
      </div>
    </App.PageSection>
  </App.PageBody>
</App.Page>
