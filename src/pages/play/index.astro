---
import { LandingPage, PageHero } from '@/lib/ui';
import { playPageData } from './_/play.data';
---

<LandingPage.Container title={playPageData.title}>
  <LandingPage.Header />

  <LandingPage.Body backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero data-testid="play-hero" title={playPageData.title} subtitle={playPageData.subtitle} />

    <LandingPage.Section>
      {
        playPageData.introduction && (
          <div data-testid="play-intro" class="max-w-4xl mx-auto mb-16 text-center">
            {playPageData.introduction.map(paragraph => (
              <p class="text-xl text-gray-700 mb-4 leading-relaxed">{paragraph}</p>
            ))}
          </div>
        )
      }

      <div class="space-y-16">
        {
          playPageData.hobbies.map(hobby => (
            <section data-testid="hobby-section" class="bg-white rounded-2xl shadow-md p-8 lg:p-12">
              <div class="flex items-start gap-6 mb-8">
                <span data-testid="hobby-icon" class="text-5xl">
                  {hobby.icon}
                </span>
                <div>
                  <h2 data-testid="hobby-name" class="text-3xl font-bold text-gray-800 mb-2">
                    {hobby.name}
                  </h2>
                  <p data-testid="hobby-description" class="text-xl text-gray-600">
                    {hobby.description}
                  </p>
                </div>
              </div>

              <div class="space-y-10">
                {hobby.sections.map(section => (
                  <div data-testid="hobby-content-section" class="space-y-4">
                    {section.title && (
                      <h3
                        data-testid="hobby-section-title"
                        class="text-2xl font-semibold text-gray-800"
                      >
                        {section.title}
                      </h3>
                    )}
                    {section.content.map(paragraph => (
                      <p
                        data-testid="hobby-section-content"
                        class="text-lg text-gray-700 leading-relaxed"
                      >
                        {paragraph}
                      </p>
                    ))}
                  </div>
                ))}
              </div>

              {hobby.favoriteThings && (
                <div data-testid="hobby-favorites" class="mt-12 pt-8 border-t border-gray-100">
                  <h4 class="text-lg font-semibold text-gray-800 mb-4">Favorites</h4>
                  <ul class="space-y-2">
                    {hobby.favoriteThings.map(thing => (
                      <li data-testid="hobby-favorite-item" class="flex items-center gap-2">
                        <span class="text-amber-500">â˜…</span>
                        <span class="text-gray-700">{thing}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </section>
          ))
        }
      </div>
    </LandingPage.Section>

    <LandingPage.Footer />
  </LandingPage.Body>
</LandingPage.Container>
