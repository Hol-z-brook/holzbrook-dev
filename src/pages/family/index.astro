---
import { familyPageData } from '@/lib/domain/family/family.data';
import FamilyMemberCard from '@/lib/domain/family/member/FamilyMemberCard.astro';
import { LandingPage, PageHero, VStack } from '@/lib/ui';
---

<LandingPage.Container title={familyPageData.title}>
  <LandingPage.Header />

  <LandingPage.Body backgroundColor="bg-gray-100" class="flex flex-col min-h-screen">
    <PageHero
      data-testid="family-hero"
      title={familyPageData.title}
      subtitle={familyPageData.subtitle}
    />

    <LandingPage.Section>
      <VStack data-testid="family-members-list" class="space-y-6">
        {
          familyPageData.familyMembers.map(familyMember => (
            <FamilyMemberCard member={familyMember} />
          ))
        }
      </VStack>
    </LandingPage.Section>

    <LandingPage.Footer />
  </LandingPage.Body>
</LandingPage.Container>
